pkgname=perl-encode-escape
pkgver=0.14
pkgrel=1
pkgdesc="Encode::Escape - Perl extension for Encodings of various escape sequences"
arch=("any")
url="http://search.cpan.org/~you/Encode-Escape-0.14/"
license=('custom')

source=("http://search.cpan.org/CPAN/authors/id/Y/YO/YOU/Encode-Escape-0.14.tar.gz")
_md5sums=('x')

build() {
  cd $srcdir/Encode-Escape-0.14
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL # INSTALLDIRS=vendor
  make
  make test
  make install DESTDIR=$pkgdir
}
